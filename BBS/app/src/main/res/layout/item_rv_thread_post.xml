<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:clickable="true"
    android:foreground="@drawable/selector_foreground_settings"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorMainBg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_thread_content"
            android:background="@color/colorThreadContentBg"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="@drawable/selector_foreground_settings"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_avatar_post"
                    android:layout_width="@dimen/size_avatar_normal"
                    android:layout_height="@dimen/size_avatar_normal"
                    android:src="@drawable/avatar1"
                    android:layout_alignParentEnd="true"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/civ_avatar_post"
                    >

                    <TextView
                        android:id="@+id/tv_nickname_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:textColor="@color/colorTvBlackMain"
                        android:textSize="14sp"
                        tools:text="中文名"
                        />

                    <TextView
                        android:id="@+id/tv_post_datetime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/tv_nickname_post"
                        android:layout_below="@+id/tv_nickname_post"
                        android:paddingTop="2dp"
                        android:textSize="12sp"
                        tools:text="2017-11-11"
                        />

                </RelativeLayout>

            </RelativeLayout>

            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:id="@+id/tv_post_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/colorTvBlackMainTint"
                android:textSize="14sp"
                tools:text="挑剔大家发多少aflsjlfsj大家来决定是否了解爱上了飞机来打扫房间2017年05月22日23:45:052017年05月22日23:45:07"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>