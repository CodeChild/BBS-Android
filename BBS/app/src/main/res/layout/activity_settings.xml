<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorMainBg"
    >

    <include
        layout="@layout/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fl_settings_container_1"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:minHeight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:textSize="18sp"
        android:textColor="@color/material_red_400"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorMainBgLight"
        android:foreground="@drawable/selector_foreground_settings"
        android:clickable="true"
        android:id="@+id/tv_logout"
        />

    <android.support.v7.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="夜间模式"
        android:textColor="@color/colorTvBlackMain"
        android:textSize="15sp"
        android:id="@+id/switch_night_mode"
        android:minHeight="48dp"
        android:background="@color/colorMainBgLight"
        android:gravity="center_vertical"
        android:foreground="@drawable/selector_foreground_settings"
        android:layout_marginTop="16dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start second act"
        android:id="@+id/btn_start_second"
        />

</LinearLayout>