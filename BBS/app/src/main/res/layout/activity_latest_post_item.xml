<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="#FFFFFF">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_civ_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/avatar1"
            app:civ_border_color="@color/material_light_white"
            app:civ_border_width="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_civ_avatar"
            android:gravity="left"
            android:hint="1"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/author"
            android:layout_alignBottom="@+id/author"
            android:gravity="left"
            android:text="发布"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/main_collection_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_my_collection" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/author"
            android:layout_below="@+id/author"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:hint="2"
            android:lines="2"
            android:ellipsize="end"
            />
         <TextView
            android:id="@+id/create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:gravity="left"
            android:hint="time"
            android:textSize="14sp"
            android:layout_marginRight="10dp"
             android:layout_marginEnd="12dp"
             android:layout_alignParentBottom="true"
             android:layout_alignParentEnd="true"
             android:layout_marginBottom="13dp" />

    </RelativeLayout>
</FrameLayout>
