<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="240dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_login_input"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="@dimen/width_icon_login"
                    android:layout_height="@dimen/width_icon_login"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/margin_icon_left"
                    android:src="@drawable/icon_login_account"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="用户名"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_text_input_layout_register"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="@dimen/width_icon_login"
                    android:layout_height="@dimen/width_icon_login"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/margin_icon_left"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_login_password"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="密码"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/checkbox_save_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/margin_top_sub_selector"
                    android:text="记住密码"
                    android:textColor="@color/material_cyan_600"
                    android:textSize="@dimen/text_size_16sp"
                    />

                <TextView
                    android:id="@+id/tx_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/checkbox_save_password"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:text="忘记密码?"
                    android:textColor="@color/material_red_300"
                    android:textSize="@dimen/text_size_16sp"
                    />

            </RelativeLayout>

            <com.dx.dxloadingbutton.lib.LoadingButton
                android:id="@+id/loading_btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                app:lb_btnColor="@color/colorPrimary"
                app:lb_btnRippleColor="#000000"
                app:lb_btnText="登录"
                app:lb_resetAfterFailed="true"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                >

                <TextView
                    android:id="@+id/tv_goto_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:clickable="true"
                    android:text="新用户注册>>"
                    android:textSize="@dimen/text_size_16sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="老用户认证>>"
                    android:textSize="@dimen/text_size_16sp"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="游客登录>>"
                android:textColor="@color/material_blue_400"
                android:textSize="@dimen/text_size_16sp"
                />

        </LinearLayout>


    </LinearLayout>
</ScrollView>
